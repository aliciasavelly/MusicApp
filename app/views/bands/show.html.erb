<%= link_to("Back to All Bands", bands_url) %>

<h2> <%= @band.name %> </h2>

<h4>Albums</h4>

<ul>
  <% Album.all.each do |album| %>
    <li> <%= link_to(album.name, album_url(album)) if album.band_id == @band.id %> </li>
  <% end %>
</ul>

<h4>Links</h4>

<ul>
  <li><%= link_to("New album", new_album_url) %></li>
  <li><%= link_to("Edit Band", edit_band_url) %></li>
  <li><%= link_to("Delete Band", band_url(@band), method: :delete) %></li>
  <li><%= link_to("All bands", bands_url) %></li>
</ul>
